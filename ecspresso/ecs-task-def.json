{
  "containerDefinitions": [
    {
      "cpu": 0,
      "essential": true,
      "image": "{{ must_env `ECR_ENDPOINT` }}/{{ must_env `DOCKER_IMAGE_NAME` }}:{{ must_env `DOCKER_IMAGE_TAG` }}",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/acceptessa2-test",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "name": "nginx",
      "portMappings": [
        {
          "appProtocol": "",
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "command": [
        "/usr/local/bin/plackup",
        "-a",
        "/root/app.psgi",
        "--port",
        "80"
      ]
    }
  ],
  "family": "acceptessa2-test",
  "ipcMode": "",
  "memory": "128",
  "networkMode": "bridge",
  "pidMode": "",
  "executionRoleArn": "{{ tfstate `aws_iam_role.ecs-task.arn` }}",
  "requiresCompatibilities": [
    "EC2"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "{{ must_env `ECS_ARCH` }}",
    "operatingSystemFamily": "LINUX"
  }
}
